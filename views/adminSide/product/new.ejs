<%- include('../partials/header'); -%>
    <div id="content" class="content">
        <!-- begin breadcrumb -->
        <ol class="breadcrumb pull-right">
            <li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
        <!-- end breadcrumb -->
        <!-- begin page-header -->
        <h1 class="page-header">Add new product <small>Enter details of new product...</small></h1>
        <!-- end page-header -->

        <!-- begin row -->
        <div class="row">
            <!-- begin col-3 -->
            <div class="col-lg-12 col-md-12">
                <div class="panel panel-inverse" data-sortable-id="form-validation-1">
                    <!-- begin panel-heading -->
                    <div class="panel-heading">
                        <div class="panel-heading-btn">
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                        </div>
                        <h4 class="panel-title">New product form</h4>
                    </div>
                    <!-- end panel-heading -->
                    <!-- begin panel-body -->
                    <div class="panel-body">
                        <form class="form-horizontal" da ta-parsley-validate="true" name="demo-form" action="/dash/products" method="POST" enctype="multipart/form-data">
                            <div class="form-group row m-b-15">
                                <label class="col-md-4 col-sm-4 col-form-label" for="fullname">Name  :</label>
                                <div class="col-md-8 col-sm-8">
                                    <input class="form-control" type="text" id="fullname" name="product_name" placeholder="Name" data-parsley-required="true" />
                                </div>
                            </div>
                            <div class="form-group row m-b-15">
                                <label class="col-md-4 col-sm-4 col-form-label" for="address">Description  :</label>
                                <div class="col-md-8 col-sm-8">
                                    <input class="form-control" type="textarea" id="product_description" name="product_description" data-parsley-type="text" placeholder="Description" data-parsley-required="true" />
                                </div>
                            </div>
                            <div class="form-group row m-b-15">
                                <label class="col-md-4 col-sm-4 col-form-label" for="product_price">Price  :</label>
                                <div class="col-md-8 col-sm-8">
                                    <input class="form-control" type="number" step="any" id="product_price" name="product_price"  placeholder="Price" />
                                </div>
                            </div>
                            <div class="form-group row m-b-15">
                                <label class="col-md-4 col-sm-4 col-form-label" for="dl">Quantity :</label>
                                <div class="col-md-8 col-sm-8">
                                    <input class="form-control" type="number" id="product_qty " name="product_qty" data-parsley-required="text" placeholder="Quantity" />
                                </div>
                            </div>
                            <div class="form-group row m-b-15">
                                <label class="col-md-4 col-sm-4 col-form-label" for="dl">Capacity (In litres) :</label>
                                <div class="col-md-8 col-sm-8">
                                    <input class="form-control" type="number" step="any" id=" product_capacity " name="product_capacity" data-parsley-required="text" placeholder="Capacity" />
                                </div>
                            </div>
                            <div class="form-group row m-b-15">
                                <label class="col-md-4 col-sm-4 col-form-label" for="dl">Brand :</label>
                                <div class="col-md-8 col-sm-8">
                                    <select id="drivers" name="fk_brand_id" style="font-size: 14px;" required>
                                        <% availableBrands.forEach(function(brand){ %>
                                            <option value="<%= brand.brand_id %>" style="font-size: 12px;"><%= brand.brand_name %></option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>                            
                            <div class="form-group row m-b-15">
                                <label class="col-md-4 col-sm-4 col-form-label" for="dl">Type (1: Tankers, 2: Water Bottles, 3: Water Cans) :</label>
                                <div class="col-md-8 col-sm-8">
                                    <input class="form-control" type="number" id=" fk_category_id " name="fk_category_id" data-parsley-required="text" placeholder="Category" min="1" max="3" value="2"/>
                                </div>
                            </div>

                            <div class="form-group row m-b-15">
                                <label class="col-md-4 col-sm-4 col-form-label" for="img">Select image :</label>
                                <div class="col-md-8 col-sm-8">
                                    <input class="form-control" type="file" id=" img " name="product_image" accept="image/*"/>
                                </div>
                            </div>
                            
                            <div class="form-group row m-b-0 ">
                                <label class="col-md-4 col-sm-4 col-form-label ">&nbsp;</label>
                                <div class="col-md-8 col-sm-8 ">
                                    <button type="submit " id="mysubmit " class="btn btn-primary ">Submit</button>
                                </div>
                            </div>
                            
                        </form>
                    </div>
                    <!-- end panel-body -->
                </div>
            </div>
        </div>
    </div>
