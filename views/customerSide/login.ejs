<%- include('partials/header'); -%>

    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Login/Register</h1>
                    <nav class="d-flex align-items-center">
                        <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="./login.html">Login/Register</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <!--================Login Box Area =================-->
    <section class="login_box_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-6" style="height: 100%;">
                    <div class="login_box_img">
                        <img class="img-fluid" src="/assets/customerSide/img/banner/common-banner.jpg" style="height: 400px;" alt="">
                        <div class="hover">
                            <h4>New to our website?</h4>

                            <a class="primary-btn" href="/register">Create an Account</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login_form_inner">
                        <div class="container" style="width: 100%;height:100%">
                            <h3 style="color: #424195;font-size: 20px;font-weight: bold;">Login to website</h3>
                            <div class="col-md-12">
                                <%- include('partials/messages'); -%>
                            </div>
                            <form class="row login_form" action="/login" method="post" id="contactForm" novalidate="novalidate">
                                <div class="col-md-12 form-group">
                                    <input type="email" class="form-control" id="name" name="email_id" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" value="<%= typeof email_id != 'undefined' ? email_id : '' %>">
                                </div>
                                <div class="col-md-12 form-group">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                                </div>
                                <!-- <div class="col-md-12 form-group">
                                    <div class="creat_account">
                                        <input type="checkbox" id="f-option2" name="selector">
                                        <label for="f-option2">Keep me logged in</label>
                                    </div>
                                </div> -->
                                <div class="col-md-12 form-group">
                                    <button type="submit" value="submit" class="primary-btn">Login</button>
                                    <!-- <p style="color: red; margin-top: 5px;">
    
                                    </p> -->

                                    <a href="/forgot-password">Forgot Password?</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Login Box Area =================-->


    <%- include('partials/footer'); -%>